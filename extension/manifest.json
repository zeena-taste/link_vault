{
  "name": "Link Vault Saver",
  "description": "Save links to Link Vault",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "http://localhost:5000/*",
    "https://your-backend.onrender.com/*"
  ]
}
